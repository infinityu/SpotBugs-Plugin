<?xml version="1.0" encoding="UTF-8"?>
<MessageCollection xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="messagecollection.xsd">

    <Plugin>
        <ShortDescription>SpotBugs Plugin For Multi-Tenancy Security</ShortDescription>
        <Details>This plugin provides custom detectors for scanning static fields.</Details>
    </Plugin>

    <Detector class="com.spotbugs.plugin.DeclareStaticFields">
        <Details>
            Custom detector to detect DECLARE_MUTABLE_STATIC_FIELD bug pattern.
        </Details>
    </Detector>

    <Detector class="com.spotbugs.plugin.AssignStaticFields">
        <Details>
            Custom detector to detect ASSIGN_MUTABLE_STATIC_FIELD bug pattern..
        </Details>
    </Detector>

    <BugPattern type="DECLARE_MUTABLE_STATIC_FIELD">
        <ShortDescription>Static field is declared.</ShortDescription>
        <LongDescription>
            Static field is declared.
        </LongDescription>
        <Details>
            <![CDATA[<p> Make sure it's thread-safe in multi-thread environment. </p>]]>
        </Details>
    </BugPattern>

    <BugPattern type="ASSIGN_MUTABLE_STATIC_FIELD">
        <ShortDescription>Filed reference is changed</ShortDescription>
        <LongDescription>
            Assigning values to static field
        </LongDescription>
        <Details>
            <![CDATA[<p> Make sure it's thread-safe in multi-thread environment. </p>]]>
        </Details>
    </BugPattern>

    <BugCode abbrev="DECLARE_STATIC">Declare static field</BugCode>
    <BugCode abbrev="ASSIGN_STATIC">Assign static field</BugCode>
</MessageCollection>